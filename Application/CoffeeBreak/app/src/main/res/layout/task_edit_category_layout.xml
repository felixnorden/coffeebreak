<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_edit_categories_item_layout"
    android:minHeight="50dp">


    <ImageView
        android:id="@+id/task_edit_categories_item_indicator"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/description_category"
        app:srcCompat="@drawable/ic_dot_white_24dp" />

    <ImageButton
        android:id="@+id/task_edit_category_remove_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_clear_white_24dp"
        android:tint="@color/colorAccent" />

    <TextView
        android:id="@+id/task_edit_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="48dp"
        android:gravity="center_vertical"
        android:hint="Category"
        android:textSize="16sp" />

</RelativeLayout>