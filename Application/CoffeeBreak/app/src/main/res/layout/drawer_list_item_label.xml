<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical">

    <ViewSwitcher
        android:id="@+id/view_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/name_view_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/CoffeeBreakTheme"
            android:inputType="textCapSentences"
            android:textAlignment="textStart"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/name_view_uneditable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textSize="14sp" />

    </ViewSwitcher>

    <ImageView
        android:id="@+id/imageViewCategoryColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/ic_dot_white_24dp"
        android:layout_alignTop="@+id/view_switcher"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp" />

</RelativeLayout>